---
interface Props {
  title: string
  body: string
}

const { title, body } = Astro.props;
---

<section>
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8 py-8 md:py-12 lg:flex lg:items-center">
    <div class="max-w-xl text-left">
      <h2 class="text-3xl sm:text-5xl font-extrabold">
	{title}
      </h2>
      <p class="mt-4 max-w-lg sm:text-xl/relaxed">
	{body}
      </p>
    </div>
  </div>
</section>
