---

import Location from '../components/icons/Location.astro';
import Email from '../components/icons/Email.astro';
import LinkedIn from '../components/icons/LinkedIn.astro';
import RokalinNano from './images/RokalinNano.astro';

const email = "general.rokalin@gmail.com";
const linkedIn = "https://www.linkedin.com/company/rokalin-pharmaceuticals/";
const houseNo = "15850457";
---

<footer class="bg-gray-100">
  <div class="mx-auto max-w-screen-xl pb-6 px-4 sm:px-6 lg:px-8 pt-10 lg:pt-14">
    <div class="flex gap-8 flex-col md:flex-row md:justify-between md:items-baseline">
      <div>
        <div class="flex justify-center text-teal-600 sm:justify-start">
          <RokalinNano size={64} />
        </div>
        <p class="mt-3 text-center leading-relaxed text-gray-500 sm:text-left">
          Rokalin Pharmaceuticals is registered in England and Wales.
        </p>
        <p class="mt-3 text-center leading-relaxed text-teal-700 transition hover:text-teal-700/75 sm:text-left">
          Company House Number: {houseNo}
        </p>
      </div>

      <div class="text-center sm:text-left">
        <p class="text-lg font-medium text-gray-900">Contact Us</p>
        <ul class="mt-5 space-y-4 text-sm">
          <li>
            <a class="flex items-center justify-center gap-1.5 w-max mx-auto sm:mx-0" href=`mailto:${email}`>
              <Email />
              <span class="flex-1 text-gray-700">{email}</span>
            </a>
          </li>
          <li>
            <a class="flex items-center justify-center gap-1.5 w-max mx-auto sm:mx-0" href={linkedIn}>
              <LinkedIn />
              <span class="flex-1 text-gray-700">Rokalin Pharmaceuticals | LinkedIn</span>
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="mt-2 md:mt-12 border-t border-gray-100 pt-6">
      <div class="text-center sm:flex sm:justify-between sm:text-left">
        <p class="text-sm text-gray-500">
          <span class="block sm:inline">All rights reserved.</span>
        </p>
        <p class="mt-4 text-sm text-gray-500 sm:order-first sm:mt-0">&copy; 2024 Rokalin Pharmaceuticals</p>
      </div>
    </div>
  </div>
</footer>
